  "description": "Simple one page app to demonstrate Koa2 api",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "watch": "nodemon --exec npm run start",
    "build": "babel src -d build",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jwelmac/recent-wins.git"
  },
  "keywords": [
    "koa2",
    "nodejs",
    "ava"
  ],
  "author": {
    "name": "Jermaine McFarlane",
    "email": "j.mcfarlane.mbbs@gmail.com"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jwelmac/recent-wins/issues"
  },
  "homepage": "https://github.com/jwelmac/recent-wins#readme",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "koa": "^2.0.0-alpha.8",
    "koa-bodyparser": "^3.2.0",
    "koa-logger": "^2.0.1",
    "koa-router": "^7.0.1"
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-3": "^6.22.0",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-3"
    ]
  },
  "ava": {
